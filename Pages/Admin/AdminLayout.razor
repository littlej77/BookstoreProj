@inherits LayoutComponentBase

<div class="bg-info text-white p-2">
   <div class="container-fluid">

       <div class="row">
           <div class="col">
               <span class="navbar-brand m-lg-2">My Bookstore</span>
           </div>

           <div class="col-2 text-right">
               @* hover feature over log out button *@
               <a class="btn btn-sm btn-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="Log Out"  href="/account/logout">Log Out</a>

           </div>
       </div>

   </div>

</div>

<div class="container-fluid">
    <div class="row p-2">

        <div class="col-3">

            <div class="d-grid gap-2">
                <NavLink class="btn btn-outline-primary" href="/admin/Books"
                         ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Books</NavLink>
                <NavLink class="btn btn-outline-primary" href="/admin/Purchases"
                         ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Purchases</NavLink>
            </div>

        </div>

        <div class="col">
            @Body


        </div>

    </div>

</div>
