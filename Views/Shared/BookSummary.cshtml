@{
}
@model Book 


<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h3>
            @Model.Title
        </h3>
        
        <span class="badge bg-dark" style="float:right">
                Price: $@Model.Price
        </span>
        
    </div>
    <div class="card-text p-1">
        <ul>
            <li>Author: @Model.Author</li>
            <li>Publisher: @Model.Publisher</li>
            <li>ISBN: @Model.Isbn</li>
            <li>Classification: @Model.Classification</li>
            <li>Category: @Model.Category </li>
            <li>Page Count: @Model.PageCount pages</li>
        </ul>
    </div>
    <form method="post" asp-page="/Purchase">
        @*this is being sent straight over to the razor page*@
        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery() " />


        <span class="card-text">
            <button type="submit" class="btn btn-success btn small float-end">Add to Cart</button>
        </span>
    </form>
</div>

